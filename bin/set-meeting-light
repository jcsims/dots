#!/usr/bin/env fish

if timeout 5 openhue get light >/dev/null
    if osascript -e 'tell application "System Events" to get name of (processes where background only is false)' | grep 'zoom.us' >/dev/null 2>&1
        openhue set light 7a50ab2b-b809-4d6f-a419-5346b30befae --on --color red --brightness 20
    else
        openhue set light 7a50ab2b-b809-4d6f-a419-5346b30befae --off
    end
end
